{
  "name": "repo-to-text-watcher",
  "version": "0.1.0",
  "description": "CLI tool to quickly dump a folder into a single text file, with sensible defaults, or advanced config",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "repo-to-text": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun run clean && tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "bun test && bun run build",
    "prepare": "bun run build",
    "lint": "tsc --noEmit"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "repository",
    "text",
    "watcher",
    "file-contents",
    "dump",
    "cli",
    "git",
    "monitor",
    "filesystem"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VesterDe/repo-to-text.git"
  },
  "bugs": {
    "url": "https://github.com/VesterDe/repo-to-text/issues"
  },
  "homepage": "https://github.com/VesterDe/repo-to-text#readme",
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "glob": "^10.3.10",
    "ignore": "7"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.10.6",
    "@vitest/coverage-v8": "^3.2.4",
    "mock-fs": "^5.2.0",
    "tmp-promise": "^3.0.3",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
