{
  "name": "repo-to-text-watcher",
  "version": "0.0.4",
  "description": "CLI tool to dump repository file contents into a single text file, with globbing and watch mode",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "repo-to-text": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "prepublishOnly": "npm run test && npm run build",
    "prepare": "npm run build",
    "lint": "tsc --noEmit"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "repository",
    "text",
    "watcher",
    "file-contents",
    "dump",
    "cli",
    "git",
    "monitor",
    "filesystem"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VesterDe/repo-to-text.git"
  },
  "bugs": {
    "url": "https://github.com/VesterDe/repo-to-text/issues"
  },
  "homepage": "https://github.com/VesterDe/repo-to-text#readme",
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "glob": "^10.3.10",
    "ignore": "^5.3.0",
    "commander": "^11.1.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "tmp-promise": "^3.0.3",
    "mock-fs": "^5.2.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
